<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite_100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite_100"
            android:padding="8dp"
            android:text="@string/txt_alpha"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tv_group_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_recyclerview"
            tools:listitem="@layout/item_contact_list" />
    </LinearLayout>
</layout>
